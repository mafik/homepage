doctype html
block pre
html(itemscope, itemtype='http://schema.org/' + (microdata_type || 'Blog'))
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      block meta
        meta(itemprop='name', content=locals.name + ' - ' + locals.desc_en)
        meta(itemprop='description', content='Projects, ideas and tools for hackers interested in artificial intelligence, programming languages and casual hacking.')
        meta(name='description', content='Projects, ideas and tools for hackers interested in artificial intelligence, programming languages and casual hacking.')
        meta(itemprop='image', content=locals.url + '/snail.jpg')

      link(rel='shortcut icon', href='/favicon.ico')
      title
        block title
          = locals.name + ' - ' + locals.desc_en
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title='RSS')
      link(href='https://fonts.googleapis.com/css?family=Fira+Mono|Fira+Sans:400,300,500,700,300italic&subset=latin-ext',rel='stylesheet',type='text/css')
      link(rel='stylesheet', href='/main.css')
  block body
    body.index
      include nav.jade
      script(src='/i18n.js')