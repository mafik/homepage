nav
  h1
    a(href="/",style="color:black")=locals.name
  div
    img.lang(src='/lang.png',title='Language PL/EN')
    a(rel='home',href=locals.url+'/feed.xml',type='application/rss+xml',title='RSS')
      img.rss(src='data:image/svg+xml;charset=utf-8;base64,')
  ul.articles
    - var articles = env.helpers.getArticles(contents);
    each article in articles
      if article.metadata
        li
          a(href=article.url, lang='pl', title=article.metadata.desc_pl)= article.metadata.title_pl || article.title
          a(href=article.url, lang='en', title=article.metadata.desc_en)= article.metadata.title_en || article.title
          time= moment.utc(article.date).format('YYYY-MM-DD')
          // time(lang='en')= moment.utc(article.date).lang('en').format('D MMMM YYYY')

  hr
  ul
    li
      a(href='https://plus.google.com/+MarekRogalski?rel=author',rel='author') Google+: +MarekRogalski
    li
      a(href='https://github.com/mafik/') GitHub: @mafik
    li
      a(href='mailto:mafikpl@gmail.com') mafikpl@gmail.com